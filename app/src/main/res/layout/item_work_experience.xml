<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_marginTop="@dimen/small_separation_3"
              android:layout_marginBottom="@dimen/small_separation_3"
              android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/iv_work_company"
            android:layout_width="@dimen/default_width_company_iv"
            android:layout_height="@dimen/default_heght_company_iv"
            android:layout_margin="@dimen/small_separation"
            tools:src="@mipmap/ic_launcher"/>


    <LinearLayout android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/tv_work_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Android developer SR"
                android:layout_marginTop="@dimen/small_separation_3"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

        <TextView android:id="@+id/tv_work_company"
                  android:layout_marginTop="@dimen/small_separation_3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/colorPrimary"
                  tools:text="Na-at technologies"/>

        <TextView
                android:id="@+id/tv_work_init_date_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_separation_3"
                tools:text="20-12-19  05-10-17"/>

        <TextView
                android:id="@+id/tv_work_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"/>

    </LinearLayout>


</LinearLayout>